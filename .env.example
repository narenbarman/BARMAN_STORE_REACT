# Backend
PORT=5000
DB_PATH=server/barman-store.db
FRONTEND_ORIGIN=http://localhost:80,https://narenbarman.github.io
BCRYPT_SALT_ROUNDS=10
# manual = admin/manual-first workflow
# provider = provider-first defaults for OTP/email delivery
AUTH_FLOW_MODE=manual
PASSWORD_RESET_MODE=admin

# OTP provider settings (used when PASSWORD_RESET_MODE=otp)
OTP_PROVIDER=twilio
OTP_DELIVERY_MODE=manual
OTP_API_KEY=
OTP_API_SECRET=
OTP_SENDER_ID=
OTP_TTL_SECONDS=300
OTP_MAX_ATTEMPTS=5
OTP_VERIFY_SESSION_TTL_SECONDS=900

# Email verification settings
# Use `stub` now (logs verification link in server console).
# Switch to `provider` later and set provider keys.
BUSINESS_NAME=BARMAN STORE
EMAIL_DELIVERY_MODE=manual
EMAIL_VERIFICATION_MODE=stub
EMAIL_VERIFY_BASE_URL=https://narenbarman.github.io/BARMAN_STORE_REACT/#/login
EMAIL_VERIFY_TTL_SECONDS=900
EMAIL_VERIFY_MAX_ATTEMPTS=5
EMAIL_API_KEY=
EMAIL_API_SECRET=
EMAIL_FROM=
PHONE_VERIFY_BASE_URL=https://narenbarman.github.io/BARMAN_STORE_REACT/#/login
PASSWORD_RESET_LOGIN_URL=https://narenbarman.github.io/BARMAN_STORE_REACT/#/login

# Frontend
# VITE_API_BASE_URL=http://localhost:5000
# Preferred image provider (Google Programmable Search)
# Create API key + CX and enable Custom Search JSON API.
# VITE_GOOGLE_CSE_API_KEY=your_google_api_key
# VITE_GOOGLE_CSE_ID=your_custom_search_engine_id

# Optional fallback provider
# VITE_UNSPLASH_ACCESS_KEY=your_unsplash_access_key

BACKUP_DIR=server/backups
AUTO_BACKUP_ENABLED=false
AUTO_BACKUP_INTERVAL_MINUTES=360
AUTO_BACKUP_ON_STARTUP=false
AUTO_BACKUP_RETENTION_COUNT=30
AUTO_BACKUP_RETENTION_DAYS=30
